<h1><%= t '.title' %></h1>

<table>
  <thead>
    <tr>
      <th>Título</th>
      <th>Localização</th>
      <th>Descrição</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <td><%= room.title %></td>
        <td><%= room.location %></td>
        <td><%= room.description %></td>
        <td><%= link_to t('.show'), room %></td>
        <td><%= link_to t('.edit'), edit_room_path(room) %></td>
        <td><%= link_to t('.destroy'), room, method: :delete, data: { confirm: 'Tem certeza de que deseja remover este Registro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('.new'), new_room_path %>
